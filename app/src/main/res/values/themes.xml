<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Jukang" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_button</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ppreguler</item>

    </style>
    <style name="Theme.Main" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_button</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_button</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:fontFamily">@font/ppreguler</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.Welcome" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_button</item>
    </style>


    <style name="CostumTextIntertitle">
        <item name="android:fontFamily">@font/interbold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_slate_800</item>
    </style>

    <style name="CostumTextInterSemi">
        <item name="android:fontFamily">@font/intersemi</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_slate_800</item>
    </style>

    <style name="CostumTextIntertext">
        <item name="android:fontFamily">@font/interreguler</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_slate_600</item>
    </style>


    <style name="CustomButton" parent="Theme.AppCompat.Light">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_welcome</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/ppreguler</item>
        <item name="android:fontFamily">@font/ppreguler</item>
    </style>

    <style name="CostumTextBold">
        <item name="android:fontFamily">@font/ppbold</item>
        <item name="android:textColor">@color/black_smoke</item>
        <item name="android:textSize">16sp</item>

    </style>

</resources>