<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Main" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <!-- Secondary brand color. -->
        <item name="colorSurface">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_button</item>
        <item name="android:fontFamily">@font/intermedium</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="text_title">
        <item name="android:fontFamily">@font/interbold</item>
        <item name="android:textColor">@color/text_slate_700</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.Welcome" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_button</item>
    </style>

    <style name="Toolbar.Title.Bold" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="CostumTextIntertitle">
        <item name="android:fontFamily">@font/interbold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_slate_800</item>
    </style>

    <style name="CostumTextInterSemi">
        <item name="android:fontFamily">@font/intersemi</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_slate_800</item>
    </style>

    <style name="CostumTextIntertext">
        <item name="android:fontFamily">@font/interreguler</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_slate_600</item>
    </style>


    <style name="CustomButton" parent="Theme.AppCompat.Light">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_welcome</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/ppreguler</item>
        <item name="android:fontFamily">@font/ppreguler</item>
    </style>

    <style name="CostumTextBold">
        <item name="android:fontFamily">@font/interbold</item>
        <item name="android:textColor">@color/black_smoke</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="CustomIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary_button</item>

        <item name="shapeAppearance">@style/CustomShape</item>

<!--        <item name="android:height">40dp</item>-->
<!--        <item name="android:width">64dp</item>-->
    </style>


    <style name="CustomShape" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">20dp</item>
    </style>

</resources>